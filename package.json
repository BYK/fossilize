{
    "name": "fossilize",
    "author": "Burak Yigit Kaya <ben@byk.im>",
    "description": "Create Node SEA binaries across platforms with ease",
    "license": "MIT",
    "type": "module",
    "version": "0.1.0",
    "files": [
        "dist"
    ],
    "main": "dist/cli.js",
    "bin": {
        "fossilize": "dist/cli.js",
        "__fossilize_bash_complete": "dist/bash-complete.js"
    },
    "engines": {
        "node": ">=22"
    },
    "scripts": {
        "prebuild": "tsc -p src/tsconfig.json",
        "build": "tsup",
        "prepublishOnly": "npm run build",
        "#postinstall": "npx @stricli/auto-complete@latest install fossilize __fossilize_bash_complete"
    },
    "tsup": {
        "entry": [
            "src/bin/cli.ts",
            "src/bin/bash-complete.ts"
        ],
        "format": [
            "esm"
        ],
        "tsconfig": "src/tsconfig.json",
        "clean": true,
        "splitting": true,
        "minify": true,
        "sourcemap": true
    },
    "dependencies": {
        "@stricli/auto-complete": "^1.1.0",
        "@stricli/core": "^1.1.0",
        "esbuild": "^0.25.0",
        "macho-unsign": "^2.0.6",
        "portable-executable-signature": "^2.0.6",
        "postject": "^1.0.0-alpha.6",
        "tar-stream": "^3.1.7",
        "xz-decompress": "^0.2.2",
        "yauzl": "^3.2.0"
    },
    "devDependencies": {
        "@types/node": "22.x",
        "@types/tar-stream": "^3.1.3",
        "@types/yauzl": "^2.10.3",
        "tsup": "^6.7.0",
        "typescript": "5.6.x"
    }
}
